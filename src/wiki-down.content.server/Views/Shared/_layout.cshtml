<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wiki.Down</title>
    <link rel="stylesheet" href="@Url.Content("~/css/bootstrap.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/css/bootswatch.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/css/jquery-ui.min.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/css/jquery-ui.structure.min.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/css/jquery-ui.theme.min.css")"/>
    
    <link rel="stylesheet" href="@Url.Content("~/css/wiki.down.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/css/wiki.down.editor.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/js/highlighter/styles/default.css")" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Wiki.Down", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Editor", "Index", "Editor")</li>
                    <li>@Html.RouteLink("Syntax", "ArticleView", new { id = "WikiDown_Syntax" }, null)</li>
                    <li>@Html.RouteLink("System Design", "ArticleView", new { id = "WikiDown_SystemDesign" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr/>
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Proudly developed by</p>
                    <img src="@Url.Content("~/images/grayholme_logo_small.png")"/>
                    <p>&copy; @DateTime.Now.Year - Grayholme Ltd</p>
                </div>
            </div>
        </footer>
    </div>
    <script src="@Url.Content("~/js/jquery-1.11.2.min.js")"></script>
    <script src="@Url.Content("~/js/jquery-ui.min.js")"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/js/knockout.js")"></script>
    <script src="@Url.Content("~/js/marked.js")"></script>
    <script src="@Url.Content("~/js/wikidown.common.js")"></script>
    <script src="@Url.Content("~/js/markdown.editor.js")"></script>
    <script src="@Url.Content("~/js/highlighter/highlight.pack.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
